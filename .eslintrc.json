{
  "parser": "@babel/eslint-parser",
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest/globals": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "no-console": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "no-unused-vars": "off",
    "no-alert": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"],
          ["@core", "./src/core"]
        ],
        "extensions": [".js"]
      }
    }
  },
  "plugins": ["jest"]
}
